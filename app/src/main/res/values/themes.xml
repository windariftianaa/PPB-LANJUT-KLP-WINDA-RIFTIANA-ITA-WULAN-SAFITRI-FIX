<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MIBU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_primary</item>
        <item name="colorPrimaryVariant">@color/bg_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_primary</item>
        <item name="android:textViewStyle">@font/roboto</item>
        <item name="android:colorButtonNormal">@color/bg_primary</item>

    </style>

    <style name="Theme.MIBU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MIBU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MIBU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>